pipeline {
    agent any

    environment {
        REACT_DIR = 'ci-cd-auth'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¦ Checking out code...'
                checkout scm
            }
        }

        stage('Install Backend Dependencies') {
            steps {
                echo 'ğŸ“¦ Installing backend dependencies...'
                sh 'npm install'
            }
        }

        stage('Build React Frontend') {
            steps {
                echo 'ğŸŒ Building React frontend...'
                dir("${env.REACT_DIR}") {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Test Backend') {
            steps {
                echo 'ğŸ§ª Running backend tests...'
                sh 'npm test || true'
            }
        }

        stage('Deploy') {
            steps {
                echo 'ğŸš€ Simulating deployment...'
                echo 'Build completed and ready for deploy!'
            }
        }
    }
}
