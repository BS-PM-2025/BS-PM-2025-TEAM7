pipeline {
    agent {
        docker {
            image 'node:18'
            args '-p 3000:3000' // optional if you want to expose ports
        }
    }
    stages {
        stage('Install Dependencies') {
            steps {
                echo 'Installing Node.js dependencies...'
                sh 'npm install'
            }
        }
        stage('Build React App') {
            steps {
                echo 'Building React app...'
                dir('ci-cd-auth') { // adjust folder name if your frontend is somewhere else
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'npm test || true' // continue even if tests fail
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying app (simulation)...'
            }
        }
    }
}
