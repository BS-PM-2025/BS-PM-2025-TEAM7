pipeline {
    agent any

    stages {
        stage('Build inside Docker') {
            steps {
                script {
                    docker.image('node:18').inside {
                        stage('Install Dependencies') {
                            sh 'npm install'
                        }
                        stage('Build React App') {
                            dir('ci-cd-auth') {
                                sh 'npm install'
                                sh 'npm run build'
                            }
                        }
                        stage('Test') {
                            sh 'npm test || true'
                        }
                        stage('Deploy') {
                            echo 'Deploying app (simulation)...'
                        }
                    }
                }
            }
        }
    }
}
